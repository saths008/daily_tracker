<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tracker.MainScreenController">
    <children>
        <Button fx:id="secondaryButton" text="Add Daily Update" onAction="#goToDailyUpdate">
            <style>
        -fx-background-color: #4CAF50;
        -fx-text-fill: white;
        -fx-padding: 10px 20px;
        -fx-font-size: 14px;
        -fx-border-radius: 4px;
    </style>
    </Button>
         <Button fx:id="secondaryButton" text="Initialise SpreadSheet" onAction="#goToInitialiseSpreadSheet" />
          <Button fx:id="secondaryButton" text="Statistics" onAction="#goToStats" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
